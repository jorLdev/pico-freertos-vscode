    "version": "0.2.0",
    "configurations": [
        {
            "request": "launch",
            "type": "cortex-debug",
            "name": "Debug J-Link",
            "cwd": "${workspaceFolder}",
            "executable": "${workspaceFolder}/build/blink.elf",
            "serverpath": "/Applications/SEGGER/JLink_V782d/JLinkGDBServerCLExe",
            "servertype": "jlink",
            "armToolchainPath": "/opt/homebrew/bin/",
            "device": "RP2040_M0_0",
            "interface": "swd",
            "serialNumber": "504505205",
            //"jlinkscript": ,
            "svdPath": "${env:PICO_SDK_PATH}/src/rp2040/hardware_regs/rp2040.svd",
            "showDevDebugOutput": "parsed",
            "runToEntryPoint": "main",
            "postRestartCommands": [
                "break main",
                "continue"
            ]
        }
    ]
}